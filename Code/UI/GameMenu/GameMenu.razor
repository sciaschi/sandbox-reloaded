@using Sandbox.UI

@inherits NavHostPanel
@implements Component.INetworkListener

<root class="gamemainmenu">
    <div class="navigator-canvas" slot="navigator-canvas"></div>
</root>

@code
{
    public GameMenu()
    {
        DefaultUrl = "/";

        AddDestination("/", typeof(FrontPage));
        AddDestination("/active", typeof(ActivePage));

        if (GameManager.InGame()) Navigate("/active");

        BindClass("ingame", () => GameManager.InGame());
    }

    protected override void OnEvent(PanelEvent e)
    {
        if (e.Name == "package.changed")
        {
            StateHasChanged();
            return;
        }

        base.OnEvent(e);
    }
}
